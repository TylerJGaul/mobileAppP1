<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".MainActivity" android:padding="16dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/linearlayout_data">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_name" android:text="First Name"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/et_Fname" android:layout_weight="2"/>


    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/linearlayout_data2" android:layout_below="@id/linearlayout_data">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_name2" android:text="Middle Name"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/et_Mname" android:layout_weight="2"/>



    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/linearlayout_data3" android:layout_below="@id/linearlayout_data2">

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_name3" android:text="Last Name"/>

        <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/et_Lname" android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="95dp"
       android:layout_below="@+id/button_submit">

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_photo" android:text="Take Profile Photo"/>

        <ImageView
            android:id="@+id/thumbnail_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/photo_button"
            android:layout_width="10dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:text="Take Photo" />

    </LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/button_submit" android:text="submit" android:layout_below="@id/linearlayout_data3" />



</RelativeLayout>